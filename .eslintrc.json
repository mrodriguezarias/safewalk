{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "prettier",
    "prettier/standard",
    "prettier/react"
  ],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "jsx-quotes": ["error", "prefer-double"],
    "quotes": ["error", "double"],
    "semi": ["error", "never"],
    "space-before-function-paren": "off",
    "react/prop-types": "off",
    "react/jsx-handler-names": "off",
    "no-unused-expressions": "off",
    "react/jsx-pascal-case": "off"
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true
  }
}
