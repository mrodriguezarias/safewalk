{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "api/dist",
    "paths": {
      "@daos/*": ["api/src/daos/*"],
      "@entities/*": ["api/src/entities/*"],
      "@shared/*": ["api/src/shared/*"],
      "@server": ["api/src/Server"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["api/src/public/"],
  "include": ["api/src/**/*.ts"]
}
